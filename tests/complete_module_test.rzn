// tests/complete_module_test.rzn - Complete module system test

use "./calculator"
use "./math_types" as math

fun main() {
    println("=== Complete Module System Test ===")
    
    // Test function imports
    println("1. Function imports:")
    var sum = calculator.Add(15, 25)
    var diff = calculator.Sub(50, 20)
    println(f"   calculator.Add(15, 25) = {sum}")
    println(f"   calculator.Sub(50, 20) = {diff}")
    
    // Test constant imports
    println("2. Constant imports:")
    println(f"   calculator.PI = {calculator.PI}")
    println(f"   math.ORIGIN_Y = {math.ORIGIN_Y}")
    
    // Test variable imports
    println("3. Variable imports:")
    println(f"   math.ORIGIN_X = {math.ORIGIN_X}")
    
    // Test function with qualified name
    println("4. Function calls with module alias:")
    var distance = math.Distance(null, null)
    println(f"   math.Distance() = {distance}")
    
    println("=== All module features working! ===")
}
