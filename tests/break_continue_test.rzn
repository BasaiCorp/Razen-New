// ===== BREAK AND CONTINUE TEST =====
// Testing break and continue in loops

fun main() {
    println("=== BREAK AND CONTINUE TEST ===")
    
    // Test break
    println("Testing break:")
    for i in 1..6 {
        if i == 4 {
            println("Breaking at 4")
            break
        }
        println(f"Value: {i}")
    }
    
    // Test continue
    println("Testing continue:")
    for j in 1..6 {
        if j == 3 {
            continue
        }
        println(f"Value: {j}")
    }
    
    println("Break and continue tests completed")
}
