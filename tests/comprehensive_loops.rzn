fun main() {
    println("=== Comprehensive Loop Test ===")
    
    // Test 1: Range loops with arithmetic
    println("\n1. Range loops with arithmetic:")
    for i in 1..4 {
        var square = i * i
        println(f"  {i} squared = {square}")
    }
    
    // Test 2: Inclusive vs exclusive ranges
    println("\n2. Inclusive vs exclusive ranges:")
    print("Exclusive (1..4): ")
    for i in 1..4 {
        print(f"{i} ")
    }
    println("")
    print("Inclusive (1..=4): ")
    for i in 1..=4 {
        print(f"{i} ")
    }
    println("")
    
    // Test 3: Array iteration with different types
    println("\n3. Array iteration:")
    for num in [5, 10, 15, 20] {
        var doubled = num * 2
        println(f"  {num} * 2 = {doubled}")
    }
    
    // Test 4: While loop with break/continue
    println("\n4. While loop with break/continue:")
    var i = 1
    while i <= 10 {
        if i == 4 {
            i = i + 1
            continue
        }
        if i == 8 {
            break
        }
        println(f"  Count: {i}")
        i = i + 1
    }
    
    // Test 5: Nested loops with arithmetic
    println("\n5. Nested loops multiplication table:")
    for row in 1..4 {
        for col in 1..4 {
            var product = row * col
            print(f"{product} ")
        }
        println("")
    }
    
    println("\n=== All tests completed! ===")
}
