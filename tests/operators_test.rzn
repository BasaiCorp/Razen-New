// ===== STEP BY STEP OPERATORS TEST =====
// Testing operators incrementally

fun main() {
    println("=== STEP BY STEP OPERATORS TEST ===")
    
    // Test basic variables
    var a = 15
    var b = 4
    println(f"Variables: a = {a}, b = {b}")
    
    // Test all arithmetic operators
    var add_result = a + b
    var sub_result = a - b
    var mul_result = a * b
    var div_result = a / b
    var mod_result = a % b
    
    println(f"Addition: {a} + {b} = {add_result}")
    println(f"Subtraction: {a} - {b} = {sub_result}")
    println(f"Multiplication: {a} * {b} = {mul_result}")
    println(f"Division: {a} / {b} = {div_result}")
    println(f"Modulo: {a} % {b} = {mod_result}")
    
    // Test comparison operators
    var eq_result = a == a
    var ne_result = a != b
    var lt_result = b < a
    var gt_result = a > b
    var le_result = b <= a
    var ge_result = a >= b
    
    println(f"Equal: {a} == {a} = {eq_result}")
    println(f"Not Equal: {a} != {b} = {ne_result}")
    println(f"Less Than: {b} < {a} = {lt_result}")
    println(f"Greater Than: {a} > {b} = {gt_result}")
    println(f"Less Equal: {b} <= {a} = {le_result}")
    println(f"Greater Equal: {a} >= {b} = {ge_result}")
    
    // Test logical operators
    var p = true
    var q = false
    var and_result = p && q
    var or_result = p || q
    var not_result = !p
    
    println(f"Logical AND: {p} && {q} = {and_result}")
    println(f"Logical OR: {p} || {q} = {or_result}")
    println(f"Logical NOT: !{p} = {not_result}")
    
    println("=== ALL OPERATORS WORKING! ===")
}
