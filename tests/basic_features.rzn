// ===== BASIC RAZEN FEATURES TEST =====
// Testing currently working features

fun add(x: int, y: int) -> int {
    return x + y
}

fun greet(name: str) {
    println(f"Hello, {name}!")
}

fun main() {
    println("=== BASIC RAZEN FEATURES TEST ===")
    
    // ===== VARIABLE DECLARATIONS =====
    println("\n1. Variable Declarations:")
    var mutable_var = 42
    const immutable_const = "Hello World"
    var typed_var: int = 100
    var float_var = 3.14
    var bool_var = true
    
    println(f"Mutable var: {mutable_var}")
    println(f"Const: {immutable_const}")
    println(f"Typed var: {typed_var}")
    println(f"Float: {float_var}")
    println(f"Boolean: {bool_var}")
    
    // ===== BASIC ARITHMETIC =====
    println("\n2. Basic Arithmetic:")
    var a = 15
    var b = 4
    println(f"{a} + {b} = {a + b}")
    println(f"{a} - {b} = {a - b}")
    println(f"{a} * {b} = {a * b}")
    println(f"{a} / {b} = {a / b}")
    
    // ===== ASSIGNMENT =====
    println("\n3. Assignment:")
    var x = 10
    println(f"Initial x: {x}")
    x = 15
    println(f"After assignment: {x}")
    
    // ===== IF-ELSE STATEMENTS =====
    println("\n4. Conditional Statements:")
    var score = 85
    if score >= 80 {
        println("Grade: Good")
    } else {
        println("Grade: Needs Improvement")
    }
    
    // ===== WHILE LOOPS =====
    println("\n5. While Loop:")
    var counter = 1
    while counter <= 3 {
        println(f"While loop iteration: {counter}")
        counter = counter + 1
    }
    
    // ===== FOR LOOPS =====
    println("\n6. For Loops:")
    println("Range loop (1..4):")
    for i in 1..4 {
        println(f"  Range value: {i}")
    }
    
    println("Array iteration:")
    for item in [10, 20, 30] {
        println(f"  Array item: {item}")
    }
    
    // ===== FUNCTION CALLS =====
    println("\n7. Function Calls:")
    var sum = add(25, 17)
    println(f"add(25, 17) = {sum}")
    greet("Razen")
    
    // ===== STRING INTERPOLATION =====
    println("\n8. String Interpolation:")
    var user = "Developer"
    var age = 25
    println(f"User: {user}, Age: {age}")
    
    // ===== TRY-CATCH =====
    println("\n9. Error Handling:")
    try {
        println("Inside try block")
        var result = add(10, 20)
        println(f"Try result: {result}")
    } catch error {
        println(f"Caught error: {error}")
    }
    
    println("\n=== BASIC FEATURES TEST COMPLETED ===")
}
