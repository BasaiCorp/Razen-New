// ===== STRUCT AND ENUM USAGE TEST =====
// Testing actual usage of structs and enums, not just declarations

// Define a struct
struct Person {
    name: str,
    age: int,
    email: str
}

// Define an enum
enum Color {
    Red,
    Green,
    Blue,
    RGB(int, int, int)
}

// Define another enum
enum Status {
    Active,
    Inactive,
    Pending(str)
}

fun main() {
    println("=== STRUCT AND ENUM USAGE TEST ===")
    
    // Try to create struct instances
    println("\n1. Creating struct instances:")
    var person1 = Person { name: "John", age: 30, email: "john@example.com" }
    var person2 = Person { name: "Alice", age: 25, email: "alice@example.com" }
    
    println(f"Person 1: {person1}")
    println(f"Person 2: {person2}")
    
    // Try to access struct fields
    println(f"Person 1 name: {person1.name}")
    println(f"Person 1 age: {person1.age}")
    
    // Try to create enum instances
    println("\n2. Creating enum instances:")
    var color1 = Color.Red
    var color2 = Color.Green
    var color3 = Color.RGB(255, 128, 0)
    
    println(f"Color 1: {color1}")
    println(f"Color 2: {color2}")
    println(f"Color 3: {color3}")
    
    // Try to use enum with match
    println("\n3. Using enum with match:")
    match color1 {
        Color.Red => println("It's red!")
        Color.Green => println("It's green!")
        Color.Blue => println("It's blue!")
        Color.RGB(r, g, b) => println(f"It's RGB({r}, {g}, {b})")
    }
    
    println("\n=== STRUCT AND ENUM USAGE TEST COMPLETED ===")
}
