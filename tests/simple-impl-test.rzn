// Simple impl test for Razen language

struct Person {
    name: str,
    age: int
}

impl Person {
    fun new(name: str, age: int) -> Person {
        return Person { name: name, age: age }
    }
    
    fun greet(self) {
        var name = self.name
        var age = self.age
        println("Hello, I'm " + name + " and I'm " + age + " years old")
    }
    
    fun get_age(self) -> int {
        return self.age
    }
}

fun main() {
    println("=== Razen Impl System Test ===")
    
    // Create instance using static method
    var person = Person.new("Alice", 25)
    
    // Call instance methods
    person.greet()
    
    var age = person.get_age()
    println("Age: " + age)
    
    println("=== Test Complete ===")
}
