struct Rectangle {
    width: int,
    height: int
}

impl Rectangle {
    // Static method - constructor
    fun new(w: int, h: int) {
        println("Creating new rectangle")
        println("Rectangle created successfully!")
    }
    
    // Instance method with self
    fun display(self) {
        println("This is a rectangle")
        println("Rectangle display method called")
    }
    
    // Instance method with parameters
    fun resize(self, new_width: int, new_height: int) {
        println("Resizing rectangle")
        println("Rectangle resized successfully!")
    }
}

