// Final test of impl/self/new - WORKING VERSION
struct Person {
    name: str,
    age: int
}

impl Person {
    // Static method (constructor-like)
    fun new(name: str, age: int) {
        println("Creating a new person")
    }
    
    // Instance method with self
    fun greet(self) {
        println("Hello from a person!")
    }
    
    // Method with self and parameters
    fun introduce(self, to: str) {
        println("Nice to meet you!")
    }
    
    // Another method
    fun say_goodbye(self) {
        println("Goodbye!")
    }
}

fun main() {
    println("=== Razen impl/self/new SUCCESS! ===")
    
    // Test struct instantiation
    var person1 = Person { name: "Alice", age: 25 }
    person1.greet()
    person1.say_goodbye()
    
    // Test static method call with dot notation
    Person.new("Bob", 30)
    
    // Test method with parameters
    person1.introduce("Charlie")
    
    println("=== All impl/self/new tests PASSED! ===")
}
