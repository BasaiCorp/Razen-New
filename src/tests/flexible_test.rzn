// Test flexible typing - with and without type annotations

// Function with typed parameters
fun add_typed(a: int, b: int) {
    return a + b
}

// Function with untyped parameters (should be flexible)
fun add_untyped(a, b) {
    return a + b
}

// Mixed function - some typed, some not
fun mixed_function(name: str, value) {
    return name + " = " + value
}

fun main() {
    println("Testing flexible typing")
    
    // Test typed function
    var result1 = add_typed(5, 3)
    println("Typed: 5 + 3 = " + result1)
    
    // Test untyped function with numbers
    var result2 = add_untyped(10, 20)
    println("Untyped numbers: 10 + 20 = " + result2)
    
    // Test untyped function with strings
    var result3 = add_untyped("Hello", " World")
    println("Untyped strings: " + result3)
    
    // Test mixed function
    var result4 = mixed_function("age", 25)
    println("Mixed: " + result4)
    
    println("All flexible typing tests completed!")
}
