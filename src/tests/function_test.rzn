// Test user-defined functions with parameters

fun add(a: int, b: int) {
    return a + b
}

fun greet(name: str) {
    println("Hello, " + name + "!")
    return "Greeted " + name
}

fun factorial(n: int) {
    if n <= 1 {
        return 1
    }
    return n * factorial(n - 1)
}

fun main() {
    println("Testing user-defined functions")
    
    // Test simple function with parameters
    var sum: int = add(5, 3)
    println("5 + 3 = " + sum)
    
    // Test function with string parameter
    var greeting: str = greet("World")
    println(greeting)
    
    // Test recursive function
    var fact: int = factorial(5)
    println("5! = " + fact)
    
    println("All function tests completed!")
}
