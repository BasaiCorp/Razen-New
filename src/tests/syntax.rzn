    println(a)
}

fun comparisons() {
    var a: int = 10
    var b: int = 20
    println(a == b)
    println(a != b)
}

fun logical() {
    var a: bool = true
    var b: bool = false
    println(a && b)
    println(a || b)
    println(!a)
}

fun unary() {
    var a: int = 10
    println(++a)
    println(--a)
}

fun bitwise() {
    var a: int = 10
    var b: int = 20
    println(a & b)
    println(a | b)
    println(a ^ b)
    println(~a)
    println(a << b)
    println(a >> b)
}

